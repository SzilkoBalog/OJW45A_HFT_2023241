<UserControl x:Class="OJW45A_HFT_2023242.WPF_Client.UserControls.NonCrudUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OJW45A_HFT_2023242.WPF_Client.UserControls"
             xmlns:vm="clr-namespace:OJW45A_HFT_2023242.WPF_Client.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Control.DataContext>
        <vm:HintViewModel/>
    </Control.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="52*"/>
        </Grid.RowDefinitions>
        <Label Content="{Binding hint1}" Grid.Row="0" FontFamily="Cascadia Code SemiBold" Background="DarkGray" Foreground="OrangeRed" FontSize="12" BorderBrush="Black" BorderThickness="2"/>
        <Label Content="{Binding hint2}" Grid.Row="1" FontFamily="Cascadia Code SemiBold" Background="Gray" Foreground="OrangeRed" FontSize="11" BorderBrush="Black" BorderThickness="2"/>
    </Grid>
</UserControl>
